<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/fragment_linearLayout_list_content_item_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#dfdfdf"
            android:orientation="horizontal">

            <View
                android:layout_width="8dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="11dp"
                android:background="#cc0000" />

            <TextView
                android:id="@+id/fragment_textView_list_content_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:textColor="@color/toolbar_bg"
                android:textSize="14sp" />
        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#f0f0f0" />

        <LinearLayout
            android:id="@+id/fragment_linearLayout_list_content_item_avatar"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="8dp"
            android:background="#dedede"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/fragment_imageView_list_content_item_avatar"
                android:layout_width="match_parent"
                android:layout_height="160dp" />
        </LinearLayout>


        <com.haozhang.lib.SlantedTextView
            android:id="@+id/fragment_SlantedTextView_list_content_item_tag"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:gravity="center"
            app:slantedBackgroundColor="#cc0000"
            app:slantedLength="25dp"
            app:slantedMode="right"
            app:slantedTextColor="@color/white"
            app:slantedTextSize="10sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/fragment_linearLayout_list_content_item_avatar"
            android:layout_toLeftOf="@+id/fragment_SlantedTextView_list_content_item_tag">

            <TextView
                android:id="@+id/fragment_textView_list_content_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="12dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Stack 效果 ViewPager，很漂亮。"
                android:textColor="#000000"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/fragment_imageView_list_content_item_author"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/fragment_textView_list_content_item_title"
                android:layout_marginBottom="11dp"
                android:layout_marginTop="5dp"
                android:src="@mipmap/avatar" />

            <TextView
                android:id="@+id/fragment_textView_list_content_item_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="9dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/fragment_imageView_list_content_item_author"
                android:text="galols"
                android:textColor="#AF8F84"
                android:textSize="14sp" />
        </RelativeLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c5c5c5" />


</LinearLayout>