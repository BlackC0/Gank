<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#dfdfdf">

        <View
            android:layout_width="8dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="11dp"
            android:background="#cc0000" />

        <TextView
            android:id="@+id/fragment_textView_list_content_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:textColor="@color/toolbar_bg"
            android:textSize="14sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/fragment_imageView_list_content_item_avatar"
            android:layout_width="match_parent"
            android:layout_height="160dp" />

        <com.haozhang.lib.SlantedTextView
            android:id="@+id/fragment_SlantedTextView_list_content_item_tag"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            app:slantedBackgroundColor="#cc0000"
            app:slantedLength="30dp"
            app:slantedMode="right"
            app:slantedTextColor="@color/white"
            app:slantedTextSize="16sp" />

        <TextView
            android:id="@+id/fragment_textView_list_content_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_imageView_list_content_item_avatar"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="16dp"
            android:text="Stack 效果 ViewPager，很漂亮。"
            android:textColor="#000000"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_alignStart="@+id/fragment_textView_list_content_item_title"
            android:layout_below="@+id/fragment_textView_list_content_item_title"
            android:layout_marginTop="22dp"
            android:src="@mipmap/avatar" />

        <TextView
            android:id="@+id/fragment_textView_list_content_item_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_textView_list_content_item_title"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/imageView"
            android:text="galols"
            android:textColor="#AF8F84"
            android:textSize="14sp" />


    </RelativeLayout>


</LinearLayout>